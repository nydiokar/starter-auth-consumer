# Server Configuration
PORT=4000
NODE_ENV=development

# Database (SQLite)
DATABASE_URL="file:./prisma/dev.db"

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Session & Cookie Configuration
SESSION_COOKIE_NAME=app.sid
COOKIE_DOMAIN=localhost
SESSION_TTL_DAYS=7

# CSRF Protection
CSRF_COOKIE_NAME=app.csrf

# Authentication
AUTH_PEPPER=change-this-to-a-random-secure-string-in-production

# Email Configuration (Optional in development - tokens captured in memory)
MAIL_FROM=App <no-reply@example.com>
SMTP_HOST=localhost
SMTP_USER=user
SMTP_PASS=pass
FRONTEND_URL=http://localhost:4000
